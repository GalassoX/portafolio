---
import projects from '@data/projects.json'
import ProjectCard from "./ProjectCard.astro"
---

<div class="w-screen">
  <h1 class="text-3xl text-center underline decoration-violet decoration-2 underline-offset-4 mt-6 mb-12">Proyectos</h1>

  <div class="grid grid-cols-2 justify-items-center mx-12">
    {projects.map(project => <ProjectCard project={project} />)}
  </div>
</div>
