---
import Main from '@components/main/index.astro'
import Curiosity from '@components/curiosity/index.astro'
import Projects from '@components/projects/index.astro'
import Footer from '@components/footer/index.astro'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Rafael Marrugo - Portafolio</title>
	</head>
	<body class="bg-zinc-900 text-zinc-50">
		<div class="flex items-center justify-center min-h-screen">
			<Main />
		</div>
    <div class="flex justify-center mb-32">
      <Curiosity />
    </div>
		<div class="flex justify-center">
			<Projects />
		</div>
		<div class="mt-36">
			<Footer/>
		</div>
	</body>
</html>

<style is:global>
@font-face {
	font-family: 'CascadiaCode';
	src: url('/fonts/CascadiaCode.woff2') format('woff2');
	font-weight: normal;
	font-style: normal;
	font-display: swap;
}
* {
	font-family: 'CascadiaCode', sans-serif;
}
</style>